---
import { Ribbon } from "@/components/main/ribbon";
import "@/styles/globals.pcss";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<title>GigTree</title>
	</head>
	<body>
		<Ribbon client:load />
		<br />
		<div class="global_container">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		min-width: 300px;
	}

	.global_container {
		margin: 2.5rem;
	}

	@media screen and (max-width: 640px) {
		.global_container {
			margin: 1.25rem;
		}
	}
</style>
