---
import { Avatar } from "@/components/ui/Avatar";
import { Card, CardBody } from "@/components/ui/Card";
import MainProfile from "@/components/main/profile/profile.vue";
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout>
	<div class="tw-flex tw-flex-col tw-items-center tw-justify-center tw-w-full tw-h-full">
		<div class="head_container">
			<Card class="main_container">
				<CardBody class="container_body">
					<MainProfile client:load />
				</CardBody>
			</Card>

			<div class="seconary_container tw-bg-muted tw-rounded tw-w-full tw-h-[300px]">

            </div>
		</div>
	</div>
</MainLayout>

<style scoped>
	.head_container {
		width: 100%;
		height: 100%;

		max-width: 1200px;

		display: flex;
		flex-direction: row;
        justify-content: space-around;
        gap: 30px;
	}

	.main_container {
		width: 50%;
		height: 100%;

		display: flex;
		justify-content: center;
		align-items: center;
	}

    .seconary_container {
        width: 50%;
        max-width: 700px;

        display: flex;
        justify-content: center;
        align-items: center;
    }

	.container_body {
		width: 100%;
		height: 100%;
		padding: 20px 40px;
		display: block;
	}

	@media screen and (max-width: 640px) {
		.main_container {
			width: 100%;
			height: 100%;
			max-width: 100%;
			max-height: fit-content;
		}

		.container_body {
			padding: 20px;
		}
	}
</style>
