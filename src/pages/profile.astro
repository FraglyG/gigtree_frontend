---
import { Avatar } from "@/components/ui/Avatar";
import { Card, CardBody } from "@/components/ui/Card";
import MainProfile from "@/components/main/profile/profile.vue";
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout>
	<div class="tw-flex tw-flex-col tw-items-center tw-justify-center tw-w-full tw-h-full">
		<Card class="main_container">
			<CardBody class="tw-w-full tw-h-full tw-py-5 tw-px-10 tw-block">
				<MainProfile client:load />
			</CardBody>
		</Card>
	</div>
</MainLayout>

<style scoped>
	.main_container {
		width: 100%;
		height: 100%;

		max-width: 1000px;
		max-height: fit-content;

		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>
