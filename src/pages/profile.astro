---
import { Avatar } from "@/components/ui/Avatar";
import { Card, CardBody } from "@/components/ui/Card";
import MainProfile from "@/components/main/profile/profile.vue";
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout>
	<div class="tw-flex tw-flex-col tw-items-center tw-justify-center tw-w-full tw-h-full">
		<Card class="main_container">
			<CardBody class="container_body">
				<MainProfile client:load />
			</CardBody>
		</Card>
	</div>
</MainLayout>

<style scoped>
	.main_container {
		width: 100%;
		height: 100%;

		max-width: 1000px;
		max-height: fit-content;

		display: flex;
		justify-content: center;
		align-items: center;
	}

	.container_body {
		width: 100%;
		height: 100%;
		padding: 20px 40px;
		display: block;
	}

	@media screen and (max-width: 640px) {
		.main_container {
			width: 100%;
			height: 100%;
			max-width: 100%;
			max-height: fit-content;
		}

		.container_body {
			padding: 20px;
		}
	}
</style>
