---
import MainLayout from "@/layouts/MainLayout.astro";
import ListingList from "@/components/main/Listing/ListingList.vue";
---

<MainLayout>
	<div class="tw-container tw-mx-auto tw-py-8 tw-px-4">
		<div class="tw-mb-8">
			<h1 class="tw-text-3xl tw-font-bold tw-mb-2">Browse Listings</h1>
			<p class="tw-text-muted-foreground">Find the perfect freelancer for your needs</p>
		</div>

		<ListingList client:load page-size="12" enable-pagination={true} enable-search={true} enable-filters={true} default-sort="desc" default-sort-by="createdAt" />
	</div>
</MainLayout>

<style>
	.tw-container {
		max-width: 1200px;
	}
</style>
