---
import ListingList from "@/components/main/Listing/ListingList.vue";
import MainLayout from "@/layouts/MainLayout.astro";
import { Button } from "@/components/ui/Button";
import { Card, CardBody, CardHeader } from "@/components/ui/Card/index.ts";
import { CircleCheck, Zap } from "lucide-vue-next";
import ZaMap from "@/assets/za.svg";
---

<MainLayout>
	<!-- Hero Section -->
	<section class="tw-relative tw-overflow-hidden tw-bg-gradient-to-br tw-from-primary/10 tw-via-background tw-to-secondary/10 tw-py-20 tw-px-6 tw-text-center tw-rounded">
		<div class="tw-relative tw-max-w-4xl tw-mx-auto">
			<h1 class="tw-text-5xl tw-font-bold tw-mb-6 tw-bg-gradient-to-r tw-from-primary tw-to-secondary tw-bg-clip-text tw-text-transparent tw-pb-3">Welcome to GigTree</h1>
			<p class="tw-text-xl tw-text-muted-foreground tw-mb-8 tw-max-w-2xl tw-mx-auto tw-leading-relaxed">
				Discover amazing opportunities and connect with talented professionals. Whether you're looking to hire or get hired, we've got you covered.
			</p>
			<div class="tw-flex tw-flex-col sm:tw-flex-row tw-gap-4 tw-justify-center tw-items-center">
				<Button size="lg" class="tw-px-8 tw-py-3 tw-text-base tw-shadow-lg tw-transition-all tw-duration-300 hover:tw-shadow-xl hover:tw-scale-105" href="/register"> Get Started Today </Button>
				<Button variant="secondary" outline={true} size="lg" class="tw-px-8 tw-py-3 tw-text-base tw-transition-all tw-duration-300 hover:tw-scale-105" href="/listings"> Browse Opportunities </Button>
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section class="tw-py-16 tw-px-6">
		<div class="tw-max-w-6xl tw-mx-auto">
			<h2 class="tw-text-3xl tw-font-bold tw-text-center tw-mb-12 tw-text-foreground">Why Choose GigTree?</h2>
			<div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-3 tw-gap-8">
				<!-- Speed -->
				<Card class="tw-text-center tw-p-6 tw-transition-all tw-duration-300 hover:tw-shadow-lg hover:tw--translate-y-1">
					<CardHeader class="tw-pb-4">
						<div class="tw-w-16 tw-h-16 tw-bg-primary/10 tw-rounded-full tw-flex tw-items-center tw-justify-center tw-mx-auto tw-mb-4">
							<Zap class="tw-w-8 tw-h-8 tw-text-primary" />
						</div>
						<h3 class="tw-text-xl tw-font-semibold tw-text-foreground">Lightning Fast</h3>
					</CardHeader>
					<CardBody>
						<p class="tw-text-muted-foreground">Find and connect with opportunities in minutes, not days. Our streamlined process gets you results fast.</p>
					</CardBody>
				</Card>
				
				<!-- Validity -->
				<Card class="tw-text-center tw-p-6 tw-transition-all tw-duration-300 hover:tw-shadow-lg hover:tw--translate-y-1">
					<CardHeader class="tw-pb-4">
						<div class="tw-w-16 tw-h-16 tw-bg-success/10 tw-rounded-full tw-flex tw-items-center tw-justify-center tw-mx-auto tw-mb-4">
							<CircleCheck class="tw-w-8 tw-h-8 tw-text-success" />
						</div>
						<h3 class="tw-text-xl tw-font-semibold tw-text-foreground">Trusted Platform</h3>
					</CardHeader>
					<CardBody>
						<p class="tw-text-muted-foreground">Join many of freelance workers across South Africa. Your success and security are our priority.</p>
					</CardBody>
				</Card>

				<!-- Priority -->
				<Card class="tw-text-center tw-p-6 tw-transition-all tw-duration-300 hover:tw-shadow-lg hover:tw--translate-y-1">
					<CardHeader class="tw-pb-4">
						<div class="tw-w-16 tw-h-16 tw-bg-information/10 tw-rounded-full tw-flex tw-items-center tw-justify-center tw-mx-auto tw-mb-4">
							<ZaMap class="tw-w-8 tw-h-8 tw-text-information" />
						</div>
						<h3 class="tw-text-xl tw-font-semibold tw-text-foreground">South African First</h3>
					</CardHeader>
					<CardBody>
						<p class="tw-text-muted-foreground">Platform for South Africans by South Africans. Expand your network and grow your business.</p>
					</CardBody>
				</Card>
			</div>
		</div>
	</section>

	<!-- Recent Listings Section -->
	<section class="tw-py-16 tw-px-6 tw-bg-muted/30">
		<div class="tw-max-w-6xl tw-mx-auto">
			<div class="tw-text-center tw-mb-12">
				<h2 class="tw-text-3xl tw-font-bold tw-mb-4 tw-text-foreground">Latest Opportunities</h2>
				<p class="tw-text-muted-foreground tw-text-lg">Fresh opportunities added daily by our community</p>
			</div>

			<ListingList
				client:load
				page-size="6"
				enablePaginationInfo={false}
				enable-pagination={false}
				enable-search={false}
				enable-filters={false}
				default-sort="desc"
				default-sort-by="createdAt"
				class="tw-mb-8"
			/>

			<div class="tw-text-center">
				<Button variant="primary" size="lg" href="/listings" class="tw-mx-auto tw-w-fit tw-px-8 tw-py-3 tw-shadow-lg tw-transition-all tw-duration-300 hover:tw-shadow-xl hover:tw-scale-105">
					View All Opportunities
				</Button>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="tw-py-20 tw-px-6 tw-bg-gradient-to-r tw-from-primary tw-to-secondary tw-text-white tw-relative tw-overflow-hidden">
		<div class="tw-absolute tw-inset-0 tw-bg-black/10"></div>
		<div class="tw-relative tw-max-w-4xl tw-mx-auto tw-text-center">
			<h2 class="tw-text-4xl tw-font-bold tw-mb-6">Ready to Join Our Community?</h2>
			<p class="tw-text-xl tw-mb-8 tw-opacity-90 tw-max-w-2xl tw-mx-auto">
				Don't miss out on amazing opportunities. Join the workforce who are already growing their careers with GigTree.
			</p>
			<div class="tw-flex tw-flex-col sm:tw-flex-row tw-gap-4 tw-justify-center tw-items-center">
				<Button
					variant="secondary"
					size="lg"
					href="/register"
					class="tw-px-8 tw-py-3 tw-text-base tw-bg-white tw-text-primary hover:tw-bg-gray-100 tw-shadow-lg tw-transition-all tw-duration-300 hover:tw-shadow-xl hover:tw-scale-105"
				>
					Sign Up Now - It's Free!
				</Button>
				<Button
					variant="primary"
					outline={true}
					size="lg"
					href="/login"
					class="tw-px-8 tw-py-3 tw-text-base tw-border-white tw-text-white hover:tw-bg-white hover:tw-text-primary tw-transition-all tw-duration-300 hover:tw-scale-105"
				>
					Already Have an Account?
				</Button>
			</div>
		</div>
	</section>
</MainLayout>
